{
  "name": "c-sign-backend",
  "version": "0.1.0",
  "description": "c-sign backend - Payload CMS 3.x with Next.js 15",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--no-deprecation\" next dev",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation\" next build",
    "start": "cross-env NODE_OPTIONS=\"--no-deprecation\" next start",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "seed": "echo 'Note: Direct tsx execution has Payload 3.x compatibility issues. Use: npm run dev, then curl http://localhost:3000/api/seed'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "depcheck": "depcheck"
  },
  "dependencies": {
    "@fingerprintjs/fingerprintjs": "^5.0.1",
    "@fontsource/inter": "^5.2.8",
    "@hookform/resolvers": "^3.10.0",
    "@payloadcms/db-postgres": "^3.0.0",
    "@payloadcms/email-nodemailer": "^3.76.1",
    "@payloadcms/next": "^3.0.0",
    "@payloadcms/richtext-lexical": "^3.0.0",
    "@payloadcms/storage-vercel-blob": "^3.76.1",
    "@payloadcms/ui": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "graphql": "^16.9.0",
    "i18next": "^25.8.7",
    "i18next-browser-languagedetector": "^8.2.1",
    "isomorphic-dompurify": "^3.0.0-rc.2",
    "lucide-react": "^0.468.0",
    "nanoid": "^5.1.6",
    "next": "15.4.11",
    "payload": "^3.0.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.71.1",
    "react-i18next": "^16.5.4",
    "react-signature-canvas": "^1.0.7",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.6.1",
    "tailwindcss": "^4.1.18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.9",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-signature-canvas": "^1.0.7",
    "depcheck": "^1.4.7",
    "eslint": "^9.17.0",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
